
@{
    ViewData["Title"] = "Koltuklar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Koltuklar</h1>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/Global.js"></script>
<script src="~/js/Koltuk.js"></script>

<div class="container mt-5">
    <h2 class="text-center mb-4">Koltuk Seçimi</h2>

    <div id="koltuklar" class="koltuk-grid mb-4">

    </div>

    <div class="text-center">
        <button id="satinAlButton" class="btn btn-primary" disabled onclick="satinAl()">Satın Al</button>
    </div>
</div>

<style>
    .koltuk-grid {
        display: grid;
        grid-template-columns: repeat(6, 50px);
        gap: 10px;
        justify-content: center;
    }

    .koltuk {
        width: 50px;
        height: 50px;
        background-color: lightgray;
        border: 1px solid #ccc;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        cursor: pointer;
        border-radius: 8px;
    }

        .koltuk.dolu {
            background-color: red;
            cursor: not-allowed;
        }

        .koltuk.secili {
            background-color: green;
        }
</style>
