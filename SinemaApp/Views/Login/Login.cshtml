@using SinemaApp.Entities.Concrete;
@model Kullanici;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <script src="~/js/Login.js"></script>
    <link rel="stylesheet" href="~/css/Login.css" />
    <script src="~/js/Login.js"></script>
</head>

<body>
    
    <div id="loadingPanel" class="loading-overlay" style="display: none;">
        <div class="spinner">
            <div class="cube1"></div>
            <div class="cube2"></div>
        </div>
    </div>

    <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow p-4" style="width: 100%; max-width: 400px; border-radius: 1rem;">
            <h3 class="text-center mb-4">Giriş Yap</h3>
            <form id="loginForm" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email Adresi</label>
                    <input type="email" class="form-control" id="Email" name="Email" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Şifre</label>
                    <input type="password" class="form-control" id="Sifre" name="Sifre" required>
                </div>

                <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>

                <div class="mt-3 text-center">
                    <a href="/Account/ForgotPassword">Şifremi Unuttum</a>
                </div>
            </form>
        </div>
    </div>
</body>

