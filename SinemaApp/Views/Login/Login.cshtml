@using SinemaApp.Entities.Concrete;
@model Kullanici;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    
    <link rel="stylesheet" href="~/css/Login.css" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    
	
</head>

<body>

    <div id="loadingPanel" class="loading-overlay" style="display: none;">
        <div class="spinner">
            <div class="cube1"></div>
            <div class="cube2"></div>
        </div>
    </div>

   
    <div id="loginForm" class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow p-4" style="width: 100%; max-width: 400px; border-radius: 1rem;">
            <h3 class="text-center mb-4">Giriş Yap</h3>
            <form id="loginFormElement" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email Adresi</label>
                    <input type="email" class="form-control" id="Email" name="Email" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Şifre</label>
                    <input type="password" class="form-control" id="Sifre" name="Sifre" required>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary w-50 me-2">Giriş Yap</button>
                    <button type="button" id="kaydolBtn" class="btn btn-secondary w-50">Kaydol</button>
                </div>

                <div class="mt-3 text-center">
                    <a href="/Account/ForgotPassword">Şifremi Unuttum</a>
                </div>
            </form>
        </div>
    </div>

    <div id="signupForm" class="container d-flex justify-content-center align-items-center" style="min-height: 80vh; display: none;">
        <div class="card shadow p-4" style="width: 100%; max-width: 400px; border-radius: 1rem;">
            <h3 class="text-center mb-4">Kaydol</h3>
            <form id="registerForm" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email Adresi</label>
                    <input type="email" class="form-control" id="RegEmail" name="Email" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Şifre</label>
                    <input type="password" class="form-control" id="RegSifre" name="Sifre" required>
                </div>

                <div class="mb-3">
                    <label for="name" class="form-label">Ad</label>
                    <input type="text" class="form-control" id="RegAd" name="Ad" required>
                </div>

                <div class="mb-3">
                    <label for="surname" class="form-label">Soyad</label>
                    <input type="text" class="form-control" id="RegSoyad" name="Soyad" required>
                </div>

                <button type="submit" class="btn btn-primary w-100">Kaydol</button>
            </form>
        </div>
    </div>
    <script src="~/js/Login.js"></script>
    

</body>

